<h1>Users</h1>

<%= link_to "➕ New User", new_user_path,class: "btn btn-new" %>

<table class="user-table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Giới tính</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.sex ? "Nam" : "Nữ" %></td>
        <td class="actions">
          <%= link_to "Show", user_path(user), class: "btn btn-show" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-edit" %>
          <%= link_to "Delete",
            user_path(user),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn btn-delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
