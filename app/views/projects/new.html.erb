<h1>New project</h1>

<%= form_with model: @project,local:true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :user_id%>
    <%= form.number_field :user_id, placeholder: "Enter user id" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Cancel", projects_path %>
